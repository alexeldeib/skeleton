{
  "name": "saas-skeleton",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "landing",
    "app",
    "supabase",
    "fly",
    "cloudflare"
  ],
  "scripts": {
    "bootstrap": "./bootstrap-dev.sh",
    "bootstrap:prod": "./bootstrap-production.sh",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:e2e": "playwright test",
    "test:auth": "playwright test tests/magic-link-auth.spec.ts",
    "test:auth:all": "playwright test tests/auth-*.spec.ts tests/magic-link-auth.spec.ts",
    "test:auth:local": "playwright test tests/auth-local-complete.spec.ts",
    "test:auth:prod": "playwright test tests/auth-prod-check.spec.ts",
    "test:auth:mock": "playwright test tests/magic-link-auth.spec.ts",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "prettier": "^3.0.0",
    "puppeteer": "^24.8.2",
    "turbo": "^1.10.0",
    "uuid": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4"
  }
}
